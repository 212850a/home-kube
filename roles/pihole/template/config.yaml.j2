apiVersion: v1
kind: ConfigMap
metadata:
  namespace: metallb-system
  name: config
data:
  config: |
    address-pools:
    - name: default
      protocol: layer2
      addresses:
      - {{ metallb_ip_range }}
    - name: pihole-services
      protocol: layer2
      addresses:
      - {{ pihole_ip }}-{{ pihole_ip }}
