---
persistentVolumeClaim:
  enabled: true
  existingClaim: "pihole-nfs-pvc"
serviceWeb:
  type: LoadBalancer
  annotations:
    metallb.universe.tf/loadBalancerIPs: {{ pihole_ip }}
    metallb.universe.tf/allow-shared-ip: {{ pihole_ip }}
serviceDns:
  type: LoadBalancer
  annotations:
    metallb.universe.tf/loadBalancerIPs: {{ pihole_ip }}
    metallb.universe.tf/allow-shared-ip: {{ pihole_ip }}
resources:
  limits:
    cpu: 200m
    memory: 256Mi
  requests:
    cpu: 100m
    memory: 128Mi
# If using in the real world, set up admin.existingSecret instead.
adminPassword: admin
