apiVersion: v1
kind: ConfigMap
metadata:
  namespace: metallb-system
  name: config
data:
  config: |
    address-pools:
    - name: default
      protocol: layer2
      addresses:
      - {{ metallb_ip_range }}
{% if pihole_ip is defined %}
    - name: pihole_ip
      protocol: layer2
      addresses:
      - {{ pihole_ip }}/32
{% endif %}
{% if prometheus_ip is defined %}
    - name: prometheus_ip
      protocol: layer2
      addresses:
      - {{ prometheus_ip }}/32
{% endif %}
{% if grafana_ip is defined %}
    - name: grafana_ip
      protocol: layer2
      addresses:
      - {{ grafana_ip }}/32
{% endif %}
{% if plex_ip is defined %}
    - name: plex_ip
      protocol: layer2
      addresses:
      - {{ plex_ip }}/32
{% endif %}
{% if ha_ip is defined %}
    - name: ha_ip
      protocol: layer2
      addresses:
      - {{ ha_ip }}/32
{% endif %}
{% if esphome_ip is defined %}
    - name: esphome_ip
      protocol: layer2
      addresses:
      - {{ esphome_ip }}/32
{% endif %}
{% if minio_ip is defined %}
    - name: minio_ip
      protocol: layer2
      addresses:
      - {{ minio_ip }}/32
{% endif %}
